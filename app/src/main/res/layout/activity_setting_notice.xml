<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_Notice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지사항 1"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView_Notice_Content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지사항은 이러하다"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_Notice_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방금"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView_Notice_Symbol1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView_Notice_Nickname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="익명"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_Notice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지사항 2"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView_Notice_Content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공지사항은 이러하다"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_Notice_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방금"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView_Notice_Symbol2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView_Notice_Nickname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="익명"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>