<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
            android:id="@+id/text_view_today_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="오늘의 소개"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button_Fragment_Chat"
                android:layout_width="190dp"
                android:layout_height="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="사진으로 소개" />

            <Button
                android:id="@+id/button_Fragment_Chat2"
                android:layout_width="190dp"
                android:layout_height="170dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="성격으로 소개" />

        </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="목소리로 소개" />

            <TextView
                android:id="@+id/text_view_group_ting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="과팅"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_Fragment_Chat3"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="아는사람과의 과팅" />

                <Button
                    android:id="@+id/button_Fragment_Chat4"
                    android:layout_width="190dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="랜덤 과팅" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="게시판"
                android:textSize="30sp" />

            <ListView
                android:id="@+id/ListView_Community"
                android:layout_width="match_parent"
                android:layout_height="205dp">

            </ListView>

        </LinearLayout>
    </ScrollView>

    </LinearLayout>
